# Colors
[colors]
background = #332b2f 
foreground = #d26e55
alert = #BF616A

border = #

# Global
[global/wm]
margin-top = 5
margin-bottom = 5

# Bar
[bar/laptop]
monitor = eDP-1
width = 100%
height = 26

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = "Source Code Pro:size=11;1"
font-1 = "FontAwesome:pixelsize=12;1"

padding-right = 4
padding-left = 4
module-margin = 3

modules-left = i3 xwindow
modules-center = date
modules-right = mem cpu wlan lan battery vol

[module/i3]
type = internal/i3

label-unfocused-background = ${colors.background}
label-unfocused-foreground = ${colors.foreground}

label-mode = %mode%
label-mode-padding = 2
label-mode-background = ${colors.background}

label-focused = %index%
label-focused-foreground = ${colors.foreground}
label-focused-background = ${colors.background}
label-focused-underline = ${colors.alert}
label-focused-padding = 2

label-unfocused = %index%
label-unfocused-padding = 2

label-visible = %index%
label-visible-underline = ${colors.alert}
label-visible-padding = 4

label-urgent = %index%
label-urgent-foreground = ${colors.foreground}
label-urgent-background = ${colors.background}
label-urgent-underline = ${colors.alert}
label-urgent-padding = 2

[module/xwindow]
type = internal/xwindow
label = %title:0:50:...%
label-padding = 10
label-foreground = ${colors.foreground}

[module/vol]
type = internal/alsa
master-mixer = IEC958

format-volume = = <ramp-volume> <label-volume>
label-volume = %percentage%%

label-muted =  MUTED

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 


[module/cpu]
type = internal/cpu
format-prefix = "CPU "

label = %percentage%%

[module/mem]
type = internal/memory
format-prefix = "MEM "

label = %percentage_used%%

[module/wlan]
type = internal/network
interface = wlp2s0
interval = 3.0

format-connected = "<label-connected>"
format-connected-prefix = "   "

label-connected = %essid%
label-disconnected =   WLAN

[module/lan]
type = internal/network
interface = enp1s0
interval = 3.0

label-connected =    %{T3}%local_ip%%{T-}
label-disconnected-foreground = #66

[module/battery]
type = internal/battery
full-at = 98
battery = BAT1

format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>

format-full-prefix = " "
format-full-prefix-foreground = ${colors.foreground}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground = ${colors.foreground}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-foreground = ${colors.foreground}
animation-charging-framerate = 750

[module/date]
type = internal/date
interval = 5
time = "%H:%M"
date = "%d-%m-%Y"
label = "%time%, %date%"
format-prefix-background = ${colors.background}
ntAwesome:pixelsize=8;1"
label-background = ${colors.background}
